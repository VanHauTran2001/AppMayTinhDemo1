<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contrain1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintBottom_toBottomOf="@+id/contrain1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="0"
            android:id="@+id/txt_kq"
            android:textSize="80dp"
            android:padding="20dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_light"
        app:layout_constraintTop_toTopOf="@id/contrain1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:onClick="ButtonClick"
                android:background="@drawable/custom_button"
                android:layout_margin="10dp"
                android:text="AC"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:background="@drawable/custom_button"
                android:layout_margin="10dp"
                android:onClick="ButtonClick"
                android:text="+/-"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:onClick="ButtonClick"
                android:background="@drawable/custom_button"
                android:layout_margin="10dp"
                android:text="%"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:background="@drawable/cutom2"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:onClick="ButtonClick"
                android:text="รท"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:background="@drawable/custom3"
                android:layout_margin="10dp"
                android:onClick="ButtonClick"
                android:textColor="@color/white"
                android:text="7"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:background="@drawable/custom3"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:onClick="ButtonClick"
                android:text="8"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/custom3"
                android:onClick="ButtonClick"
                android:text="9"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="@drawable/cutom2"
                android:onClick="ButtonClick"
                android:text="x"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:background="@drawable/custom3"
                android:layout_margin="10dp"
                android:onClick="ButtonClick"
                android:textColor="@color/white"
                android:text="4"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:background="@drawable/custom3"
                android:layout_margin="10dp"
                android:onClick="ButtonClick"
                android:text="5"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:background="@drawable/custom3"
                android:layout_margin="10dp"
                android:onClick="ButtonClick"
                android:text="6"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:background="@drawable/cutom2"
                android:onClick="ButtonClick"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom3"
                android:textSize="50dp"
                android:onClick="ButtonClick"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:text="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom3"
                android:textSize="50dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:onClick="ButtonClick"
                android:text="2"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:background="@drawable/custom3"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:onClick="ButtonClick"
                android:text="3"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:background="@drawable/cutom2"
                android:layout_margin="10dp"
                android:onClick="ButtonClick"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2.2"
                android:text="0"
                android:onClick="ButtonClick"
                android:gravity="left"
                android:paddingLeft="35dp"
                android:textColor="@color/white"
                android:background="@drawable/custom3"
                android:textSize="50dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="ButtonClick"
                android:background="@drawable/custom3"
                android:text="."
                android:textColor="@color/white"
                android:textSize="50dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50dp"
                android:background="@drawable/cutom2"
                android:layout_margin="10dp"
                android:onClick="ButtonClick"
                android:textColor="@color/white"
                android:text="="/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
